{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"**/node_modules/**",
			"**/.git/**",
			"**/dist/**",
			"**/.next/**",
			"**/*.gen.ts",
			"**/*.generated.ts",
			"**/routeTree.gen.ts",
			"**/vite.config.ts.timestamp-*",
			"coverage/**",
			"**/tsconfig*.json",
			"**/jsconfig*.json"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 80
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn"
			},
			"style": {
				"noNonNullAssertion": "warn"
			},
			"a11y": {
				"useButtonType": "error",
				"useValidAnchor": "error",
				"noSvgWithoutTitle": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn"
			}
		},
		"ignore": [
			"**/node_modules/**",
			"**/.next/**",
			"**/dist/**",
			"**/build/**",
			"**/*.config.js",
			"**/*.config.ts",
			"**/*.config.mjs",
			"**/*.config.cjs"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "all"
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "tab"
		}
	}
}
